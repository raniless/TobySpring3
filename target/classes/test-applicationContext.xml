            <props>
                <prop key="get*">PROPAGATION_REQUIRED,readOnly</prop>
                <prop key="*">PROPAGATION_REQUIRED</prop>
            </props>
        </property>
    </bean>

    //tx:adivice 태그에 의해 TransactionInterceptor 빈이 등록된다.
    //transaction-manager는 bean 아이디가 transactionManager면 생략 가능
