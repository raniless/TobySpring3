        <tx:attributes>
            //propagation이 REQUIRED면 생략 가능
            <tx:method name="get*" read-only="true" />
            <tx:method name="*" />
        </tx:attributes>
    </tx:advice>
    -->

    <tx:annotation-driven />

    <context:annotation-config />
